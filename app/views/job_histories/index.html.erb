<p id="notice"><%= notice %></p>

<h1>Job Histories</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Employee</th>
      <th>Job</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_histories.each do |job_history| %>
      <tr>
        <td><%= job_history.start_date %></td>
        <td><%= job_history.end_date %></td>
        <td><%= job_history.employee_id %></td>
        <td><%= job_history.job_id %></td>
        <td><%= link_to 'Show', job_history %></td>
        <td><%= link_to 'Edit', edit_job_history_path(job_history) %></td>
        <td><%= link_to 'Destroy', job_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

